<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@color/lightdark">

    <LinearLayout android:id="@+id/mainLayoutContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/lightdark"
            android:id="@+id/textView"
            android:layout_weight="0.50" />

        <LinearLayout android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/AC"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonAC" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/C"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonC" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="%"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonpercent"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttondivision"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button7"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button8"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button9"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                android:id="@+id/buttonmul"
                tools:ignore="HardcodedText"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button4"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button5"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button6"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonminus"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button1"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button2"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button3"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonplus"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttondot"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:onClick="onClick"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button0"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonequal"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="more"
                android:onClick="onClick"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonmore"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AC"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonAC2"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonC2"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="log"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonlog"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="ln"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonln"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonlp"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonrp"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="sin"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonsin"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Dec"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttondec"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="âˆš"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonrootsquare"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="x^n"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonexposant"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="cos"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttoncos"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Hex"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonhex"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line9"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="x10^n"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonmul10exposant"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Exp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttoneexp"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="tan"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttontan"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Bin"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonbin"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout android:id="@+id/line10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="sin-1"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonsinminus1"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="cos-1"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttoncosminus1"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="tan-1"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttontanminus1"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="more"
                android:onClick="onClick"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonmore2"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
